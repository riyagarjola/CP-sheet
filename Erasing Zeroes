#include<bits/stdc++.h>
using namespace std;

int main(){
ios::sync_with_stdio(false);
cin.tie(nullptr);

int t;
cin >> t;
while(t--){
string s;
cin >> s;

int first=-1,last=-1;
for(int i=0;i<s.size();i++){
if(s[i]=='1'){
if(first==-1)  first=i;
last=i;
}
}
if(first==-1 || first==last){
cout << 0<<"\n";
continue;
}
int cnt=0;
for(int i=first;i<=last;i++){
if(s[i]=='0') cnt++;
}
cout << cnt <<endl;
}
return 0;
}


