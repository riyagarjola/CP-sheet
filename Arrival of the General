#include<bits/stdc++.h>
using namespace std;
 
int main(){
int n;
cin>>n;
 
vector<int> a(n);
for(int i=0;i<n;i++){
cin >> a[i];
}
int posMax,posMin;
 
int maxElement=*max_element(a.begin(),a.end());
int minElement=*min_element(a.begin(),a.end());
 
for(int i=0;i<n;i++){
if(a[i] == maxElement){
posMax=i;
break;
}
}
for(int i=n-1;i>=0;i--){
if(a[i] == minElement){
posMin=i;
break;
}
}
int ans=posMax +(n-1-posMin);
if(posMax > posMin){
ans--;
}
cout<<ans<<endl;
return 0;
}
