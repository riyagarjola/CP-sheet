#include<bits/stdc++.h>
using namespace std;
 
int main(){
string s;
cin >> s;
 
vector<int> container;
for(int i=0;i<s.size();i+=2){
container.push_back(s[i]-'0');
}
sort(container.begin(),container.end());
for(int i=0;i<container.size();i++){
cout<<container[i];
if(i!=container.size()-1)  cout<<"+";
}
cout<<endl;
return 0;
}
